# Основные настройки
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# База данных
DATABASE_URL=sqlite+aiosqlite:///./analog_teletype.db
# ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/teletype

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Trusted Hosts
TRUSTED_HOSTS=["localhost", "127.0.0.1"]

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True
SMTP_SSL=False

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Платежи
YOOMONEY_SHOP_ID=your-yoomoney-shop-id
YOOMONEY_SECRET_KEY=your-yoomoney-secret
KASPI_MERCHANT_ID=your-kaspi-merchant-id
KASPI_API_KEY=your-kaspi-api-key

# Файлы
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Sentry
SENTRY_DSN=your-sentry-dsn

# Безопасность
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=True 